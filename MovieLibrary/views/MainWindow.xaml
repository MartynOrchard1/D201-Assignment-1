<Window x:Class="movielibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Library" Height="600" Width="850" Background="LightGray">

    <!-- 🎨 Global Button Styling -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#222222"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#999"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Opacity" Value="0"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Input Fields -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
            <RowDefinition Height="Auto"/> <!-- Search + Reset -->
            <RowDefinition Height="*"/> <!-- Listbox -->
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">
            <StackPanel Margin="5">
                <Label Content="Title" FontWeight="Bold"/>
                <TextBox x:Name="txtTitle" Width="120"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Label Content="Director" FontWeight="Bold"/>
                <TextBox x:Name="txtDirector" Width="120"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Label Content="Genre" FontWeight="Bold"/>
                <TextBox x:Name="txtGenre" Width="100"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Label Content="Release Year" FontWeight="Bold"/>
                <TextBox x:Name="txtYear" Width="80"/>
            </StackPanel>
            <StackPanel Margin="5" VerticalAlignment="Bottom">
                <Label Content="" Height="12"/> <!-- Invisible label for spacing -->
                <Button Content="Add Movie"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="1" Margin="0,0,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Load Movies" Grid.Column="1"  />
            <Button Content="Save Movies" Grid.Column="2" />
            <Button Content="Edit Movie" Grid.Column="3"/>
            <Button Content="Delete" Grid.Column="4"/>
            <Button Content="Borrow" Grid.Column="5"/>
            <Button Content="Return" Grid.Column="6"/>
            <Button Content="Sort by Title" Grid.Column="7"/>
            <Button Content="Sort by Year" Grid.Column="8"/>
            <Button Content="Sort by ID" Grid.Column="9"/>
        </Grid>

        <!-- Search + Reset Row -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0,0,10">
            <ComboBox x:Name="cmbSearchType" Width="120" Height="26" Margin="0,0,5,0" VerticalContentAlignment="Center" SelectedIndex="0">
                <ComboBoxItem Content="Search by Title" />
                <ComboBoxItem Content="Search by MovieID" />
            </ComboBox>
            <TextBox x:Name="txtSearch" Width="180" Height="26" Margin="0,0,5,0" VerticalContentAlignment="Center"/>
            <Button Content="Search" Width="80" Height="28"/>
            <Button Content="Reset" Width="100" Height="28" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- List Display -->
        <ListBox x:Name="movieListBox"
                 Grid.Row="3"
                 Margin="0"
                 Background="LightGray"
                 Foreground="Black"
                 >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="4" Background="White">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" FontSize="14">
                                <Run Text="ID: "/>
                                <Run Text="{Binding MovieID}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Title: " FontWeight="Bold"/>
                                <Run Text="{Binding Title}"/>
                                <Run Text=" || Director: " FontWeight="Bold"/>
                                <Run Text="{Binding Director}"/>
                                <Run Text=" || Genre: " FontWeight="Bold"/>
                                <Run Text="{Binding Genre}"/>
                                <Run Text=" || Year: " FontWeight="Bold"/>
                                <Run Text="{Binding ReleaseYear}"/>
                                <Run Text=" || Available: " FontWeight="Bold"/>
                                <Run Text="{Binding IsAvailable}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="4"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>
<Window x:Class="movielibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Library" Height="600" Width="800" Background="LightGray">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Input Fields -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
            <RowDefinition Height="Auto"/> <!-- Search + Reset -->
            <RowDefinition Height="*"/> <!-- Listbox -->
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">
            <StackPanel Margin="5">
                <Label Content="Title" FontWeight="Bold"/>
                <TextBox x:Name="txtTitle" Width="120"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Label Content="Director" FontWeight="Bold"/>
                <TextBox x:Name="txtDirector" Width="120"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Label Content="Genre" FontWeight="Bold"/>
                <TextBox x:Name="txtGenre" Width="100"/>
            </StackPanel>
            <StackPanel Margin="5">
                <Label Content="Release Year" FontWeight="Bold"/>
                <TextBox x:Name="txtYear" Width="80"/>
            </StackPanel>
            <StackPanel Margin="5" VerticalAlignment="Bottom">
                <Label Content="" Height="12"/> <!-- Invisible label for spacing -->
                <Button Content="Add Movie" Click="AddMovie_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Button Controls -->
        <WrapPanel Grid.Row="1" Margin="0,0,0,10">
            <Button Content="Add Movie" Width="100" Margin="5"/>
            <Button Content="Borrow" Width="80" Margin="5"/>
            <Button Content="Return" Width="80" Margin="5"/>
            <Button Content="Sort by Title" Width="110" Margin="5"/>
            <Button Content="Sort by Year" Width="110" Margin="5"/>
            <TextBox x:Name="txtSearch" Width="150" Margin="5" Text="Search Title" Foreground="Gray"/>
            <Button Content="Search" Width="80" Margin="5"/>
        </WrapPanel>

        <!-- DataGrid for Display -->
        <DataGrid x:Name="movieGrid" Grid.Row="2" AutoGenerateColumns="True" Margin="0"/>
    </Grid>
</Window>